<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>

        <property name="hibernate.connection.datasource">java:comp/env/jdbc/ceserver</property>

        <property name="use_sql_comments">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="ru.korbit.cecommon.domain.Event"/>
        <mapping class="ru.korbit.cecommon.domain.City"/>
        <mapping class="ru.korbit.cecommon.domain.Cinema"/>
        <mapping class="ru.korbit.cecommon.domain.CinemaEvent"/>
        <mapping class="ru.korbit.cecommon.domain.City"/>
        <mapping class="ru.korbit.cecommon.domain.EventSchedule"/>
        <mapping class="ru.korbit.cecommon.domain.EventType"/>
        <mapping class="ru.korbit.cecommon.domain.Hall"/>
        <mapping class="ru.korbit.cecommon.domain.SimpleEvent"/>


    </session-factory>
</hibernate-configuration>
